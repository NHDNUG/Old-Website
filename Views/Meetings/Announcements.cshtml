@model IEnumerable<NHDNUG.Data.nh_Announcements>
           
@{
    ViewBag.Title = "Announcements";
    Layout = "~/Views/Shared/_LayoutNoSidebar.cshtml";
}

<link href="../../Content/jshowoff.css" rel="stylesheet" type="text/css" />
<script src="../../Scripts/jquery.jshowoff.min.js" type="text/javascript"></script>
<div  class="featured" style="position:relative;top:-100px;">
    <div id="slidingFeatures">
    @foreach (var item in Model)
    {
        <div title="@item.Title">
            <h2>@item.Title</h2>
            <p>
                @Html.Raw(item.Body )
            </p>
        </div>
    }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#slidingFeatures').jshowoff({
            effect: 'fade',
            controlText: { play: '>>', pause: '||', previous: '<', next: '>' },
            hoverPause: false
        });
    });
</script>
