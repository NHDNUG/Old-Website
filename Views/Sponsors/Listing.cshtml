@model IEnumerable<NHDNUG.Data.nh_Sponsors>

@{
    ViewBag.Title = "Sponsor Listing";
    Layout = "~/Views/Shared/_LayoutNoSidebar.cshtml";
}

<script type="text/javascript">
    setAdminNavFocus("sponsorsAdmin")
</script>

@section head{

}

<h2>@ViewBag.Title</h2>

@Html.ActionLink("Create New", "Create")

<div class="featured table-highlight">
    <table style="width:100%;">
        <tr>
            <th>
                Name
            </th>
            <th>
                URL
            </th>
            <th>
                Active
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.URL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.SponsorID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.SponsorID })
            </td>
        </tr>
    }

    </table>
</div>