@model NHDNUG.Data.nh_Announcements
    <link href="../../Content/jquery.cleditor.css" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery.cleditor.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $().ready(function () {
            $('.htmlEditor').cleditor({ width: "99%", height: "300px" });
        });
    </script>

<div class="featured">
    <table style="width:100%">
        <tbody>
            <tr>
                <td class="editor-label">@Html.LabelFor(model => model.MeetingID, "Meeting")</td>
                <td class="editor-field">
                    @Html.DropDownList("MeetingID", String.Empty)
                    @Html.ValidationMessageFor(model => model.MeetingID)
                </td>
            </tr>
            <tr>
                <td class="editor-label">@Html.LabelFor(model => model.Title)</td>
                <td class="editor-field">
                    @Html.TextBoxFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title)
                </td>
            </tr>
            <tr>
                <td class="editor-label">@Html.LabelFor(model => model.Body)</td>
                <td class="editor-field">
                    <div style="clear:both;">
                    @Html.EditorFor(model => model.Body, "HTMLEditor")
                    </div>
                    @Html.ValidationMessageFor(model => model.Body)
                </td>
            </tr>
        </tbody>
    </table>
    <br />
</div>
<br />